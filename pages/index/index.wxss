swiper{ height: 180px;}
.swiper_box {
    width: 100%;
    height: 180px;
}

swiper-item image {
    width: 100%;
    height: 180px;
    display: inline-block;
    overflow: hidden;
}

.temp_tab{ clear: both; background: #fff; overflow: hidden;}
.temp_tab .li{ float: left; width: 26%; margin-left: 4%; font-size: 1.1em; display: inline; text-align: center; height: 36px; 
line-height: 36px;}
.temp_tab .li.active{ color: #29b1ff; border-bottom: 2px solid #29b1ff;}

.temp_List{ clear: both; overflow: hidden; margin-top: 14px; background:#fff; font-size:.9em;}
.temp_List .dt{ font-size: 1em; text-align: center; padding-bottom: 14px;margin-left: 4%;color: #333; padding-top:14px;}
.temp_List .dd{ background: #fff; float: left; margin-left: 4%; width: 44%; border-radius: 6px; box-shadow: 1px 1px 1px #ccc; margin-bottom: 14px;}
.temp_List .dd .img{  width: 96%; border-top-left-radius: 6px; border-top-right-radius: 6px; height:0.25vh; min-height: 100px;padding: 2%;}
.temp_List .dd span{ padding: 4px 6px 10px; display: block; color: #999; font-size: .8em}

.p_list{ clear:both; background:#fff; padding:10px 10px; margin-top:10px;}
.p_list .dd{ position:relative; overflow:hidden; min-height:120px;}
.p_list .dd .img{ width:120px; height:120px; position:absolute; left:0; top:0;}
.p_list .dd .item{ display:block; padding-left:140px;}

button.viewBtn{ width: 22%; height:34px; line-height:34px; position:absolute; right:0; bottom:0;}
button.viewBtn1{ width: 22%; height:34px; line-height:34px; position:absolute; right:26%; bottom:0;}

